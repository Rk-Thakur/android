<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:background="@drawable/quotesbackground"
        android:layout_margin="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/acme"
                android:id="@+id/quoteslist"
                android:text=" To go out with the  setting sun on an  empty beach is  truly embrace your solitude"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="15dp"
                android:textAlignment="center"
                android:padding="30dp"
                android:textSize="40sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/acme"
            android:id="@+id/author"
            android:text="_Nelson Mandela"
            android:textColor="@color/white"
            android:gravity="right"
            android:layout_below="@+id/quoteslist"
            android:layout_marginRight="40dp"
            android:layout_marginTop="0dp"

            android:textSize="15sp"
            />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/likeshare"
                android:layout_below="@id/author"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_content_copy_24"
                    android:id="@+id/copy"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_save_alt_24"
                    android:textSize="20sp"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_share_24"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_share_24"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"/>



            </LinearLayout>



    </RelativeLayout>


</ScrollView>